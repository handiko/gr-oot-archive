<?xml version="1.0"?>
<block>
  <name>Reed-Solomon Encoder</name>
  <key>qam_reed_solomon_enc_bb</key>
  <category>QAM</category>
  <import>import qam</import>
  <make>qam.reed_solomon_enc_bb()</make>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
