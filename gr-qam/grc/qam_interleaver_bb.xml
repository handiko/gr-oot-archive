<?xml version="1.0"?>
<block>
  <name>Interleaver</name>
  <key>qam_interleaver_bb</key>
  <category>QAM</category>
  <import>import qam</import>
  <make>qam.interleaver_bb($I,$J)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>I (# of taps)</name>
    <key>I</key>
    <value>128</value>
    <type>int</type>
  </param>
  <param>
    <name>J (increment)</name>
    <key>J</key>
    <value>4</value>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
