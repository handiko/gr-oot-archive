<?xml version="1.0"?>
<block>
  <name>CCSDS Reed-Solomon Encoder</name>
  <key>satellites_encode_rs</key>
  <category>[Satellites]/FEC</category>
  <import>import satellites</import>
  <make>satellites.encode_rs($basis)</make>

  <param>
    <name>Basis</name>
    <key>basis</key>
    <type>int</type>
     <option>
       <name>Conventional</name>
       <key>0</key>
     </option>
     <option>
       <name>Dual</name>
       <key>1</key>
     </option>
  </param>

  <sink>
    <name>in</name>
    <type>message</type>
  </sink>

  <source>
    <name>out</name>
    <type>message</type>
  </source>
</block>
