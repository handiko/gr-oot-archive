<?xml version="1.0"?>
<block>
  <name>Reed-Solomon Decoder (rscode)</name>
  <key>satellites_rscode_decoder</key>
  <category>[Satellites]/FEC</category>
  <import>import satellites</import>
  <make>satellites.rscode_decoder($npar)</make>

  <param>
    <name>Parity check bytes</name>
    <key>npar</key>
    <type>int</type>
  </param>

  <sink>
    <name>in</name>
    <type>message</type>
  </sink>

  <source>
    <name>out</name>
    <type>message</type>
  </source>
</block>
