<?xml version="1.0"?>
<block>
  <name>Append CRC-32C</name>
  <key>satellites_append_crc32c</key>
  <category>[Satellites]/CSP</category>
  <import>import satellites</import>
  <make>satellites.append_crc32c($include_header)</make>
  <param>
    <name>Include CSP header</name>
    <key>include_header</key>
    <type>bool</type>
    <option>
      <name>Yes</name>
      <key>True</key>
    </option>
    <option>
      <name>No</name>
      <key>False</key>
    </option>
  </param>

  <sink>
    <name>in</name>
    <type>message</type>
  </sink>

  <source>
    <name>out</name>
    <type>message</type>
  </source>
</block>
